    @Html.DropDownListFor(m => m.Kategori_Tbl.Kategori_Ad, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    @*@Html.TextBoxFor(m => m.UrunKategori, new { @class = "form-control" })*@
    <br />
    @Html.LabelFor(m => m.Fiyat)
    @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control" })

</div>
    <div>
        <button style="margin-top:15px" class="btn btn-warning">Ürün Güncelle</button>
    </div>
}