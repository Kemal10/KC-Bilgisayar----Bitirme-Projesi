@model KCBilgisayar.Models.Entity.Urunler_Tbl
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form style="margin-top: 10px" method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" />
    </div>
    <div>
        <label>Ürün Kategorisi  Seç </label>
        @Html.DropDownListFor(m=>m.Kategori_Tbl.Kategori_Id, (List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info">Ürün ekle</button>
    </div>
</form>

